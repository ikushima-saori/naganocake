<h1>商品一覧 ５P</h1>

<div class="container">
  <div class="row">
    <div class="col-3">
       <%= render 'admin/genres/side', genres: @genres %>
    </div>

    <div class="col-9">
      <h2>商品一覧(全<%= @items_all.count %>件)</h2>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mb-4"> <!-- 横に4つ並べるためにcol-md-3を指定 -->
            <div class="card">
              <%= link_to item_path(item) do %>
                <p class="img-wrap">
                  <%= image_tag item.get_item_image(200, 150), class: "card-img-top" %>
                </p>
              <% end %>
              <div class="card-body text-center">
                <p class="card-title"><%= item.name %></p>
                <% if item.is_active == true %>
                  <p class="card-text">¥<%= format_price(item.price) %></p>
                <% else %>
                  <p class="card-text text-danger">販売停止中</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= paginate @items %>

</div>