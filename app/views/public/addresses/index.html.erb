<h1>配送先登録/一覧画面　１４P</h1>
<p>Find me in app/views/public/addresses/index.html.erb</p>
<%= flash[:success] %>
<%= flash[:danger] %>

<%= form_with model: @shipping_address, url: addresses_path, local: true do |f| %>
  <%= f.label "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000" %>
  <%= f.label "住所" %>
  <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
  <%= f.label "宛名" %>
  <%= f.text_field :name, autocomplete: "name", placeholder: "令和道子" %>
  <%= f.submit "新規登録", class: 'btn btn-success' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.postal_code %></td>
        <td><%= shipping_address.address %></td>
        <td><%= shipping_address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(shipping_address.id), class: "btn btn-success" %>
          <%= link_to "削除する", address_path(shipping_address.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
   </tbody>
</table>
